{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": 0,
        "@typescript-eslint/no-explicit-any": "off",
        "no-restricted-properties": [
            "error",
            {
              "object": "describe",
              "property": "only"
            },
            {
              "object": "it",
              "property": "only"
            }
          ],
    }
}
